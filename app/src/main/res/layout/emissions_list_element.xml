<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emissions_result_card"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:background="@color/cardview_light_background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_weight="3">
        <TextView
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:text="Emisor"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/primary_text_light"
            android:id="@+id/publisher_result"
            android:singleLine="true"
            android:gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/primary_text_light"
            android:singleLine="true"
            android:gravity="bottom"
            android:id="@+id/price_percentage"
            android:text="Precio Porcentaje"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </FrameLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/code_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo" />

        <TextView
            android:id="@+id/last_negotiated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Ultimo negociado"/>

        <TextView
            android:id="@+id/tir_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code_result"
            android:text="TIR Porcentaje"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>