<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statistics_result_card"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:layout_height="wrap_content"
    android:clickable="false">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/statistic_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/statistic_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/statistic_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_tax"
            android:layout_alignParentEnd="true"
            android:text="Price"/>

        <TextView
            android:id="@+id/statistic_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statistic_code"
            android:text="Exp Date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>